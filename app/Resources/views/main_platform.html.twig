<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{% endblock %}</title>

        <meta name="title" content="Ornest" />
        <meta name="keywords" content="Социальная сеть интернет магазинов, одежда, обувь, верхняя одежда, одежда со скидками">
        <meta name="description" content="Социальная сеть интернет магазинов, одежда, обувь, верхняя одежда, одежда со скидками" />

        <!-- Bootstrap -->
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        {% block stylesheet %}{% endblock %}
        <link href="{{ asset('bootstrap/css/style.css') }}" type="text/css" rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path("main") }}">Shops & Markets</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('shops') }}">Магазины</a></li>
                        <li><a href="{{ path('products') }}">Товары</a></li>
                        <li><a href="{{ path('search') }}">Поиск</a></li>
                        <li><a href="{{ path('news') }}">Новости</a></li>
                    </ul>
                    {{ render(controller('PlatformMainBundle:Page:searchTop')) }}
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% if app.user %}
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Мой профиль <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="small" href="{{ path('user') }}">Мой Профиль</a></li>
                                {% if is_granted('ROLE_USER') %}
                                    <li><a class="small" href="{{ path('user_order') }}">Мои заказы</a></li>
                                    <li><a class="small" href="{{ path('_allMessage') }}">Мои сообщения</a></li>
                                    <li><a class="small" href="{{ path('_friends') }}">Мои друзья</a></li>
                                {% else %}
                                    <li><a class="small" href="{{ path('user_shops') }}">Мои Магазины</a></li>
                                    <li><a class="small" href="{{ path('user_order') }}">Заказы</a></li>
                                    <li><a class="small" href="{{ path('_allMessage') }}">Сообщения</a></li>
                                {% endif %}
                                <li><a class="small" href="{{ path('logout') }}">Выйти</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h3 class="text-success">Вход на сайт</h3>
                                                <div id="errors" class="login_error"></div>
                                                <form action="{{ path('login') }}" method="post">
                                                    <div class="form-group">
                                                        <input id="username" class="form-control" type="text" name="_username" placeholder="Email" />
                                                    </div>
                                                    <div class="form-group">
                                                        <input id="password" class="form-control" type="password" name="_password" placeholder="Пароль" />
                                                    </div>
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" id="remember_me" name="_remember_me" checked /> Запомнить меня
                                                        </label>
                                                    </div>
                                                    <input class="btn btn-success btn-sm" type="submit" value="Войти" />
                                                </form>
                                            </div>
                                            {#<div class="col-lg-6">
                                                <h4>Вход для покупателей:</h4>
                                                <div class="btn-group-vertical" role="group">
                                                    <a class="btn btn-primary" href="{{ hwi_oauth_login_url('vkontakte') }}">Регистрация через ВК</a>
                                                    <a class="btn btn-info" href="{{ hwi_oauth_login_url('facebook') }}">Регистрация через FB</a>
                                                    <a class="btn btn-danger" href="{{ hwi_oauth_login_url('google') }}">Регистрация через G+</a>
                                                </div>
                                            </div>#}
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Закрыть</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg">Войти</button>
                        </div>
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-success" href="{{ path('register') }}">Регистрация</a>
                        </div>
                    {% endif %}
                    <div class="btn-group btn-group-sm" role="group">
                        <a class="btn btn-success" href="{{ path('basket') }}">Корзина</a>
                    </div>
                </div>
            </div>
            {% block body %}{% endblock %}
        </div>

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 top10">
                        <p class="text-muted small">
                            <span class="glyphicon glyphicon-copyright-mark"></span>
                            Все права защищены {{ "now"|date("Y") }} shopsnmarkets.com<br />
                            Социальная сеть интернет магазинов
                        </p>
                    </div>
                    <div class="col-lg-8 top20">
                        <a href="{{ path('shops') }}">о сайте</a>
                        <a href="{{ path('news') }}">помощь</a>
                        <a href="{{ path('news') }}">правила</a>
                        <a href="{{ path('news') }}">реклама</a>
                        <a href="{{ path('news') }}">вакансии</a>
                    </div>
                </div>
            </div>
        </footer>

        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script type="text/javascript" src="//code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>