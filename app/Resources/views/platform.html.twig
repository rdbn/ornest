<!DOCTYPE html>
<html>
    <head>
        <meta name="author" content="admin" />
        {% block stylesheets %}
            <link href="{{ asset('public/css/main_style.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/Platform/page_platform.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/form/style.css') }}" type="text/css" rel="stylesheet" />
            <!-- Fancy  -->
            <link href="{{ asset('public/css/fancybox/jquery.fancybox.css?v=2.1.5') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/fancybox/jquery.fancybox-buttons.css?v=1.0.5') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/fancybox/jquery.fancybox-thumbs.css?v=1.0.7') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        <title>{% block title %}{% endblock %}</title>
        <meta name="robots" content="noindex, nofollow">
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="Социальная сеть интернет магазинов, одежда, обувь, верхняя одежда, одежда со скидками">
        <meta name="title" content="Ornest" />
        <meta name="description" content="Социальная сеть интернет магазинов, одежда, обувь, верхняя одежда, одежда со скидками" />
    </head>
    <body>    
        <div id="mainNav">
            {% include 'PlatformMainBundle:Main:mainNav.html.twig' %}
        </div>
        <div id="headerTop">
            {% include 'PlatformMainBundle:Main:headerTop.html.twig' %}
        </div>
        <div id="mainContent">
            <div id="seconderyContent">
                {% if floor is defined and idCategory is defined %}
                    {{ render(controller('PlatformProductsBundle:SeconderyContent:menu', { 'idFloor' : floor, 'idCategory' : idCategory }))}}
                {% else %}
                    {{ render(controller('PlatformProductsBundle:SeconderyContent:menu', { 'idFloor' : floor is defined, 'idCategory' : idCategory is defined }))}}
                {% endif %}
            </div>
            <div id="content">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div id="footer">
            {% include 'PlatformMainBundle:Main:footer.html.twig' %}
        </div>
