<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="content-type" content="text/html" />
        <meta name="author" content="admin" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('public/css/main_style.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/form/style.css') }}" type="text/css" rel="stylesheet" />
            {% if is_granted('ROLE_MANAGER') %}
                <link href="{{ asset('public/css/manager.css') }}" type="text/css" rel="stylesheet" />
            {% else %}
                <link href="{{ asset('public/css/user.css') }}" type="text/css" rel="stylesheet" />
            {% endif %}
             <!-- Fancy  -->
            <link href="{{ asset('public/css/fancybox/jquery.fancybox.css?v=2.1.5') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/fancybox/jquery.fancybox-buttons.css?v=1.0.5') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('public/css/fancybox/jquery.fancybox-thumbs.css?v=1.0.7') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>    
        <div id="mainNav">
            {% include 'PlatformMainBundle:Main:mainNav.html.twig' %}
        </div>
        <div id="headerTop">
            {% include 'PlatformMainBundle:Main:headerTop.html.twig' %}
        </div>
        <div id="mainContent">
            <div id="menu">
                {% if is_granted('ROLE_MANAGER') %}
                    {{ include('ManagerMainBundle:Manager:menuManager.html.twig') }}
                {% else %}
                    {{ include('UserUserBundle:User:menuUser.html.twig') }}
                {% endif %}
            </div>
            <div id="content">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div id="footer">
            {% include 'PlatformMainBundle:Main:footer.html.twig' %}
        </div>
        {% block javascripts_message %}{% endblock %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-48593907-1', 'ornest.com');
            ga('send', 'pageview');
        </script>
    </body>
</html>