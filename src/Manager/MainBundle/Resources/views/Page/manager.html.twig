{% extends 'ManagerMainBundle:Base:layout.html.twig' %}

{% block title %}{{ user.getRealname }}{% endblock %}

{% block content %}
    <div class="media">
        <div class="media-left">
            <img class="img-thumbnail" src="{% if(user.getPath) %}{{ user.getPath | apply_filter('avatar') }}{% endif %}" />
        </div>
        <div class="media-body text-success">
            <h4 class="media-heading">{{ user.getRealname }}</h4>
            {% if(preview) %}<p>{% if(preview.text_preview != '') %}{{ preview.text_preview }}{% endif %}</p>{% endif %}
            {% if user.getCity %}<p><span class="text-muted">Страна:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            {% if user.getCity %}<p><span class="text-muted">Город:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            {% if user.street %}<p><span class="text-muted">Улица:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            {% if user.homeIndex %}<p><span class="text-muted">Индекс:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            {% if user.phone %}<p><span class="text-muted">Телефон:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            {% if user.skype %}<p><span class="text-muted">Skype:</span> {{ user.getCity.getCountry.getName }}</p>{% endif %}
            <p><span class="text-muted">Email:</span> {{ user.getEmail }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4>Информация о продавце</h4>
            {% if(preview) %}<p class="text">{% if(preview.text_main != '') %}{{ preview.text_main }}{% endif %}</p>{% endif %}
        </div>
    </div>
    <div class="row top20 bottom20">
        <div class="col-lg-12">
            <a class='btn btn-success' href='{{ path('_createShop') }}'>Создать магазин</a>
            <div class="row top20">
            {% for shop in shops %}
                <div class="col-lg-4">
                    <div class="media">
                        <div class="media-left col-lg-5">
                            <a href="{{ path('_mainShop', { 'shopname' : shop.unique_name }) }}">
                                <img class="media-object img-responsive" src="{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% endif %}" />
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">
                                <a class="text-success" href="{{ path('_mainShop', { 'shopname' : shop.unique_name }) }}">{{ shop.shopname }}</a>
                            </h4>
                            <p class="text-muted small">Подписчиков: {{ shop.users }}</p>
                            <p class="text-muted small">Рейтинг: {{ shop.rating }}</p>
                            <div class="btn-group-vertical">
                                <button class="btn btn-success btn-xs" type="button">
                                    Понравилось <span class="badge">{{ shop.likes }}</span>
                                </button>
                                <a class="btn btn-success btn-xs" href="{{ path('_updateShop', {'shopname': shop.unique_name}) }}">
                                    <span class="glyphicon glyphicon-cog"></span> Редактировать
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}