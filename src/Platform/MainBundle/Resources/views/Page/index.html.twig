{% extends '::main_platform.html.twig' %}

{% block title %}Ornest{% endblock %}

{% block body %}
    <div id="carousel-example-generic" class="carousel slide top20" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            {% for image in advertising %}
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            {% endfor %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ advertising["0"].path | apply_filter('advertisingSliderPlatform') }}" />
            </div>
            {% for image in advertising %}
                <div class="item">
                    <img src="{{ image.path | apply_filter('advertisingSliderPlatform') }}" />
                </div>
            {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <a class="btn btn-warning top20" href="#">Топ 100 магазинов</a>

    <div class="row top20 bottom20">
        <div class="row">
        {% for shop in shops %}
            <div class="col-lg-3">
                <div class="media">
                    <div class="media-left col-lg-5">
                        <a href="{{ path('_mainShop', { 'nameShop' : shop.unique_name }) }}">
                            <img class="media-object img-responsive" src="{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% endif %}" />
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">
                            <a class="text-success" href="{{ path('_mainShop', { 'nameShop' : shop.unique_name }) }}">{{ shop.shopname }}</a>
                        </h4>
                        <p class="text-muted small">Подписчиков: {{ shop.users }}</p>
                        <p class="text-muted small">Рейтинг: {{ shop.rating }}</p>
                        <button class="btn btn-success btn-xs" type="button">
                            Понравилось <span class="badge">{{ shop.likes }}</span>
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/shop/Like.js') }}" type="text/javascript"></script>
{% endblock %}