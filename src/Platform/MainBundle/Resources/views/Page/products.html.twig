{% extends '::main_platform.html.twig' %}

{% block title %}Товары{% endblock %}

{% block body %}
    <div class="top20">
        {{ render(controller('PlatformMainBundle:Page:searchForm')) }}
    </div>
    <div id="load" class="hide"><img src="{{ asset("public/images/load/ajax-loader.gif") }}"></div>
    <div class="row top20">
        {% for product in products %}
            <div class="col-sm-4 col-md-3">
                <div class="thumbnail">
                    <a href='{{ path('_productPlatform', {'id' : product.id }) }}'>
                        <img src="{{ asset(product.path | apply_filter('product_image')) }}" alt="Product" />
                    </a>
                    <div class="caption">
                        <h4>
                            <span class="text-danger">{{ product.price }}</span> <span class="label label-danger">руб.</span>
                            <button id="product-like" class="btn btn-success btn-xs pull-right">
                                Хочу <span class="badge">{{ product.likes }}</span>
                            </button>
                        </h4>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div id="result-search" class="row"></div>
    <div class="row">
        <div class="col-md-12 text-center">
            <button id="pagination" class="btn btn-warning btn-sm" data-pagination="16">Показать еще</button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bootstrap/js/pagination.js') }}" type="text/javascript"></script>
{% endblock %}