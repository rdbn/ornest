{% extends '::main_platform.html.twig' %}

{% block title %}Товары{% endblock %}

{% block body %}
    <div class="top20">
        {{ render(controller('SearchPlatformBundle:Search:searchForm')) }}
    </div>
    <div id="load" class="hide"><img src="{{ asset("public/images/load/ajax-loader.gif") }}"></div>
    <div id="resultSearch" class="row top20">
        {% for product in products %}
            <div class="col-sm-4 col-md-3">
                <div class="thumbnail">
                    <a href='{{ path('_productPlatform', {'id' : product.id }) }}'>
                        <img src="{{ asset(product.path | apply_filter('product_image')) }}" alt="Product" />
                    </a>
                    <div class="caption">
                        <h4>
                            <span class="text-danger">{{ product.price }}</span> <span class="label label-danger">руб.</span>
                            <button id="product-like" class="btn btn-success btn-xs pull-right">
                                Хочу <span class="badge">{{ product.likes }}</span>
                            </button>
                        </h4>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/platform/searchPlatform.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/platform/pagination.js') }}" type="text/javascript"></script>
{% endblock %}