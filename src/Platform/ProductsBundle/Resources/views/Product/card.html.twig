{% extends '::platform.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/ECMAScript.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/shop/addOrder.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/shop/secondCategory.js') }}" type="text/javascript"></script>
    <!-- Fancy  -->
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.mousewheel-3.0.6.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox.js?v=2.1.5') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-buttons.js?v=1.0.5') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-thumbs.js?v=1.0.7') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-media.js?v=1.0.6') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/fancybox.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="chapterProduct">
        <h3>{{ product.name }}</h3>
    </div>
    <div class='mainImg'>
        <img src="{{ asset(product.path | apply_filter('main_product_image')) }}" alt="Product" />
    </div>
    <div class='options'>
        <ul class="formFields addBasket">
            <li><h3 class="chapter">Размеры:<h3></li>
            {{ render(controller('ShopOrderBundle:FormAddBasket:form', { 'product': product })) }}
        </ul>
        <p class='text'>{{ product.text }}</p>
        <div class="shop">
            <a href="{{ path('_mainShop', { 'shopname' : product.unique_name }) }}">
                <img src="{% if (product.path != '') %}{{ product.logo | apply_filter('logo_shop') }}{% endif %}" /></a>
            </a>
            <ul>
                <li><a href="{{ path('_mainShop', { 'shopname' : product.unique_name }) }}">{{ product.shopname }}</a></li>
                <li><p>Подписчиков: {{ product.users }}</p></li>
                <li><p>Рейтинг: {{ product.rating }}</p></li>
                <li><a class="like" href="{{ product.shop }}">Понравилось <span class="countLike">{{ product.likes }}</span></a></li>
            </ul>
        </div>
    </div>
    <div class="chapterProduct">
        <h3>Похожие товары:</h3>
    </div>
    <div class='subcategoryProducts'>
        {% for product in products %}
            <ul class="products">
                <li>
                    <a href='{{ path('_productPlatform', 
                            { 'idFloor' : product.floor, 'idCategory' : product.category, 'idSubcategory' : product.subcategory, 'id' : product.id }) 
                        }}'>
                        <span class="imgHover"></span>
                        <img src="{{ asset(product.path | apply_filter('product_image')) }}" alt="Product" />
                    </a>
                </li>
                <li>
                    <h3>{{ product.name }}</h3>
                </li>
                <li>
                    <p>{{ product.price }} руб.</p>
                </li>
            </ul>
        {% endfor %}
    </div>
{% endblock %}