{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Поиск друзей{% endblock %}

{% block content %}
    {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    <form id='formSearchUsers' action="{{ path('_resualtSearchUser') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
            <div class='search'>
                {{ form_label(form.keywords) }}
                {{ form_errors(form.keywords) }}
                {{ form_widget(form.keywords) }}
                <input id='submit' class='button'  type="submit" value='' />
            </div>
            {{ form_errors(form.country) }}
            {{ form_widget(form.country) }}
            {{ form_errors(form.city) }}
            {{ form_widget(form.city) }}
        {{form_rest(form)}}
    </form>
    <div id="load"><div class="processImage"><img src="/public/images/load/ajax-loader.gif"></div></div>
    <div id="resualtSearch"></div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/listTypeFriends.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/addFriends.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/searchFriends.js') }}" type="text/javascript"></script>
{% endblock %}