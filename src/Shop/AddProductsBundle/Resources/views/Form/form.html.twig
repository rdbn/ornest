{% extends '::main_platform.html.twig' %}

{% block title %}Добавить товар{% endblock %}

{% block body %}
    <h3>Добавить товар</h3>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <form action="{{ path('_addProduct', { 'shopname' : shopname }) }}" method="post" {{ form_enctype(form) }}>
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_errors(form.cacheTags) }}
                    {{ form_widget(form.cacheTags) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.price) }}
                    {{ form_widget(form.price) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.text) }}
                    {{ form_widget(form.text) }}
                </div>
                <div class="form-group" class="save">
                    {{ form_widget(form.save) }}
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/shop/addProducts.js') }}" type="text/javascript"></script>
{% endblock %}