{% extends '::shop.html.twig' %}

{% block title %}Добавить товар{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/public/js/ECMAScript.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/public/js/shop/addProducts.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/public/js/shop/secondCategoryShop.js') }}" type="text/javascript"></script>
    <!-- Fancy  -->
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.mousewheel-3.0.6.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox.js?v=2.1.5') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-buttons.js?v=1.0.5') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-thumbs.js?v=1.0.7') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/jquery.fancybox-media.js?v=1.0.6') }}"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/fancybox.js') }}"></script>
{% endblock %}

{% block body %}
    <h3 class="chapter">Добавить товар</h3>
    <div class="image">
        <a class="button" href="{{ path('_formUploadImage', { 'nameShop' : nameShop }) }}">Добавить изображение</a>
        <img class="main preview_image_main" src="{% if image_product['0'] is defined %}{{ asset(image_product['0']) }}{% endif %}" />
        {% if image_product['0'] is defined %}<span class="delete_main">&times;</span>{% endif %}
        <ul class="mini">
            <li>
                <img class="mini_1 preview_image" src="{% if image_product['1'] is defined %}{{ asset(image_product['1']) }}{% endif %}" />
                {% if image_product['1'] is defined %}<span class="delete">&times;</span>{% endif %}
            </li>
            <li>
                <img class="mini_2 preview_image" src="{% if image_product['2'] is defined %}{{ asset(image_product['2']) }}{% endif %}" />
                {% if image_product['2'] is defined %}<span class="delete">&times;</span>{% endif %}
            </li>
            <li>
                <img class="mini_3 preview_image" src="{% if image_product['3'] is defined %}{{ asset(image_product['3']) }}{% endif %}" />
                {% if image_product['3'] is defined %}<span class="delete">&times;</span>{% endif %}
            </li>
        </ul>
    </div>
    <ul class="addProduct">
        <form action="{{ path('_insertProduct', { 'nameShop' : nameShop }) }}" method="post" {{ form_enctype(form) }}>
            {{ include('ShopAddProductsBundle:Form:formFields.html.twig') }}
        </form>
    </ul>
{% endblock %}
