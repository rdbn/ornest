{% extends '::userEditor.html.twig' %}

{% block title %}Доставка{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/ECMAScript.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/public/js/user/deliveryForm.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{ include('ShopCreateBundle:Menu:menu.html.twig') }}
    <ul class="delivery">
        {% for value in delivery %}
            <li>
                <a href="{{ nameShop }}/{{ value.id }}">
                    <img src="{{ value.image }}" alt="{{ value.name }}" />
                    <span>{{ value.name }}</span>
                    <img class="loadForm" src="/public/images/load/ajax-loader-button.gif" />
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}