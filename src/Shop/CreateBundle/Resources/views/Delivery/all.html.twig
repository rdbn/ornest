{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Доставка{% endblock %}

{% block content %}
    {{ include('ShopCreateBundle:Menu:menu.html.twig') }}
    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
    {% for value in delivery %}
        <div class="media">
            <div class="media-left media-middle">
                <a href="{{ value.id }}">
                    <img src="{{ asset(value.image) }}" alt="{{ value.name }}" />
                </a>
            </div>
            <div class="media-body">
                <p class="media-heading">
                    {{ value.name }}
                    <button class="btn btn-success">
                        <span class="glyphicon glyphicon-plus small"></span>
                    </button>
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/user/deliveryForm.js') }}" type="text/javascript"></script>
{% endblock %}