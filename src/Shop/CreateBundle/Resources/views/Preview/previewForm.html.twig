{% block stylesheets %}
    <link href="{{ asset('public/css/main_style.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('public/css/fancyboxLoginStyle.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('public/css/form/style.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('/public/js/fancybox/JSForWindow.js') }}"></script>
{% endblock %}

<ul class="formPreview">
    <form id='preview' action="#" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
            {{ form_widget(form.shopname) }}
            <li>
                {{ form_label(form.text_preview) }}
                {{ form_errors(form.text_preview) }}
                {{ form_widget(form.text_preview) }}
            </li>
            <li>
                {{ form_label(form.text_main) }}
                {{ form_errors(form.text_main) }}
                {{ form_widget(form.text_main) }}
            </li>
        {{ form_rest(form) }}
        <li class="submit">
            <div id="load">
                <img src="/public/images/load/ajax-loader-button.gif" />
            </div>
            <input class='button'  type="submit" value="Сохранить" />
        </li>
    </form>
</ul>