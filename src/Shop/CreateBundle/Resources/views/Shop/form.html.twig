{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Создать магазин{% endblock %}

{% block content %}
    {% if isCreate != true %}
        {{ include('ShopCreateBundle:Menu:menu.html.twig') }}
        <div class="row">
    {% endif %}
    <div class="{% if isCreate %}col-lg-offset-3{% endif %} col-lg-6 top20">
        <form action="{% if isCreate %}{{ path('_createShop') }}{% else %}{{ path('_updateShop', {"shopname": shopname}) }}{% endif %}" method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
            <div class="errors">
                {% if errors == false %}<h3>Адресс магазина : уже занят</h3>{% endif %}
                {{ form_errors(form) }}
            </div>
            <div class="form-group">
                {{ form_label(form.uniqueName) }}
                {{ form_errors(form.uniqueName) }}
                {{ form_widget(form.uniqueName) }}
            </div>
            <div class="form-group">
                {{ form_label(form.shopname) }}
                {{ form_errors(form.shopname) }}
                {{ form_widget(form.shopname) }}
            </div>
            <div class="form-group">
                {{ form_label(form.keywords) }}
                {{ form_errors(form.keywords) }}
                {{ form_widget(form.keywords) }}
            </div>
            <div class="form-group">
                {{ form_label(form.country) }}
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
            <div class="form-group">
                {{ form_label(form.city) }}
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phone) }}
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
    {% if isCreate != true %}</div>{% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/shop/formRegistrationShop.js') }}" type="text/javascript"></script>
{% endblock %}
