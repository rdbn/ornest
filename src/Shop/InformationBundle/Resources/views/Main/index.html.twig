{% extends '::main_platform.html.twig' %}

{% block title %}{{ shop.shopname }}{% endblock %}

{% block body %}
    <div class="row top20">
        <div class="col-lg-2">
            <img class="img-thumbnail" src="{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% endif %}" />
            {% if is_granted('ROLE_USER') %}
                {% if user %}
                    <a class="btn btn-success" href="{{ shop.id }}">Подписаться на новости</a>
                {% endif %}
            {% endif %}
            {#<p>Всего покупателей: <span class="count">{{ shop.users }}</span></p>#}
        </div>
        <div class="col-lg-10">
            <h3>{{ shop.shopname }}</h3>
            <div class="row top20">
                <div class="col-lg-12">
                    <form id="search" method="post" {{ form_enctype(form) }}>
                        <div class="input-group">
                            {{ form_errors(form) }}
                            {{ form_label(form.keywords) }}
                            {{ form_errors(form.keywords) }}
                            {{ form_widget(form.keywords) }}
                            {{form_rest(form)}}
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>
            <div class="btn-group top20">
                <button class="btn btn-success" href="{{ path('_paymentShop', { 'shopname' : shopname }) }}">Оплата</button>
                <button class="btn btn-success" href="{{ path('_deliveryShop', { 'shopname' : shopname }) }}">Доставка</button>
                <button class="btn btn-success" href="{{ path('_commentsShop', { 'shopname' : shopname }) }}">Отзывы</button>
                <button class="btn btn-success" href="{{ path('_ajaxShop', { 'shopname' : shopname }) }}">Инфо о магазине</button>
                <button class="btn btn-success" href="{{ path('_partnersShop', { 'shopname' : shopname }) }}">Партнеры</button>
                {% if is_granted('ROLE_MANAGER') %}
                    <a class="btn btn-success" href='{{ path('_addProduct', { 'shopname' : shopname }) }}'>
                        <span class="glyphicon glyphicon-plus"></span> Добавить товар
                    </a>
                {% endif %}
            </div>
            {#{{ render(controller('ManagerAdvertisingBundle:Advertising:sliderShop', { 'shopname' : shopname })) }}#}
        </div>
    </div>
    <div class="row top20">
        {% for product in products %}
            <ul class="products">
                <li>
                    <a href='{{ path('_productShop', {'shopname' : shopname, 'idFloor' : product.floor, 'idCategory' : product.category, 'idSubcategory' : product.subcategory, 'idProduct' : product.id }) }}'>
                        <span class="imgHover"></span>
                        <img src="{{ asset(product.path | apply_filter('product_image')) }}" alt="Product" />
                    </a>
                </li>
                <li>
                    <h3>{{ product.name }}</h3>
                </li>
                <li>
                    <p>{{ product.price }} руб.</p>
                    <a class="like" href="{{ product.id }}">Хочу <span class="countLike">{{ product.likes }}</span></a>
                </li>
            </ul>
        {% endfor %}
    </div>
{% endblock %}