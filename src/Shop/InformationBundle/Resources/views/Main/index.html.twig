{% extends '::main_platform.html.twig' %}

{% block title %}{{ shop.shopname }}{% endblock %}

{% block body %}
    <div class="row top20">
        <div class="col-lg-2">
            <img class="img-thumbnail" src="{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% endif %}" />
            {% if is_granted('ROLE_USER') %}
                {% if user %}
                    <a class="btn btn-success" href="{{ shop.id }}">Подписаться на новости</a>
                {% endif %}
            {% endif %}
            {#<p>Всего покупателей: <span class="count">{{ shop.users }}</span></p>#}
        </div>
        <div class="col-lg-10">
            <h3 class="top0">{{ shop.shopname }}</h3>
            <div class="row top20">
                <div class="col-lg-12">
                    <form id="search" method="post" {{ form_enctype(form) }}>
                        <div class="input-group">
                            {{ form_errors(form) }}
                                {{ form_label(form.hashTags) }}
                                {{ form_errors(form.hashTags) }}
                                {{ form_widget(form.hashTags) }}
                            {{form_rest(form)}}
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>
            <div class="btn-group top20">
                <button class="btn btn-success" href="{{ path('_paymentShop', { 'shopname' : shopname }) }}">Оплата</button>
                <button class="btn btn-success" href="{{ path('_deliveryShop', { 'shopname' : shopname }) }}">Доставка</button>
                <button class="btn btn-success" href="{{ path('_commentsShop', { 'shopname' : shopname }) }}">Отзывы</button>
                <button class="btn btn-success" href="{{ path('_ajaxShop', { 'shopname' : shopname }) }}">Инфо о магазине</button>
                <button class="btn btn-success" href="{{ path('_partnersShop', { 'shopname' : shopname }) }}">Партнеры</button>
                {% if is_granted('ROLE_MANAGER') %}
                    <a class="btn btn-success" href='{{ path('_addProduct', { 'shopname' : shopname }) }}'>
                        <span class="glyphicon glyphicon-plus"></span> Добавить товар
                    </a>
                {% endif %}
            </div>
            <div id="carousel-example-generic" class="carousel slide top20" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    {% if advertising is empty %}
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    {% else %}
                        {% for image in advertising %}
                            <li data-target="#carousel-example-generic" data-slide-to="{{ image.id }}"></li>
                        {% endfor %}
                    {% endif %}
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    {% if advertising is empty %}
                        <div class="item active">
                            <img src="{{ asset('public/images/slider.png') | apply_filter('advertisingSliderPlatform') }}" />
                        </div>
                    {% else %}
                        <div class="item active">
                            <img src="{{ advertising["0"].path | apply_filter('advertisingSliderPlatform') }}" />
                        </div>
                        {% for image in advertising %}
                            <div class="item">
                                <img src="{{ image.path | apply_filter('advertisingSliderPlatform') }}" />
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row top20">
        {% for product in products %}
            <div class="col-sm-4 col-md-3">
                <div class="thumbnail">
                    <a href='{{ path('_productShop', {'shopname' : shopname, 'id' : product.id }) }}'>
                        <img src="{{ asset(product.path | apply_filter('product_image')) }}" alt="Product" />
                    </a>
                    <div class="caption">
                        <h4>
                            <span class="text-danger">{{ product.price }}</span> <span class="label label-danger">руб.</span>
                            <button id="product-like" class="btn btn-success btn-xs pull-right">
                                Хочу <span class="badge">{{ product.likes }}</span>
                            </button>
                        </h4>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}