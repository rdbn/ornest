        <div class="info">
            {{ render(controller('SearchShopBundle:SearchShop:searchShop', { 'nameShop' : nameShop })) }}
            <ul class="menu">
                <li><a class="shopPayment" href="{{ path('_paymentShop', { 'nameShop' : nameShop }) }}">Оплата</a></li>
                <li><a class="shopDelivery" href="{{ path('_deliveryShop', { 'nameShop' : nameShop }) }}">Доставка</a></li>
                <li><a class="shopComments" href="{{ path('_commentsShop', { 'nameShop' : nameShop }) }}">Отзывы</a></li>
                <li><a class="shopInformation" href="{{ path('_ajaxShop', { 'nameShop' : nameShop }) }}">Инфо о магазине</a></li>
                <li><a class="shopPartners" href="{{ path('_partnersShop', { 'nameShop' : nameShop }) }}">Партнеры</a></li>
                {% if is_granted('ROLE_MANAGER') %}
                        <li class="addProduct">
                            <a href='{{ path('_formInsertProduct', { 'nameShop' : nameShop }) }}'>+&nbsp&nbspДобавить товар</a>
                        </li>
                {% endif %}
            </ul>
        </div>
        {#{{ render(controller('ManagerAdvertisingBundle:Advertising:sliderShop', { 'nameShop' : nameShop })) }}#}
    </div>
{% endblock %}

{% block products %}
    {{ render(controller('ShopProductBundle:Products:all', { 'nameShop' : nameShop })) }}
{% endblock %}