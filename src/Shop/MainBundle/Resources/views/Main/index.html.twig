{% extends '::main_platform.html.twig' %}

{% block title %}{{ shop.shopname }}{% endblock %}
{% block ogTitle %}{{ shop.shopname }}{% endblock %}
{% block image %}{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% else %}{% endif %}{% endblock %}
{% block ogImage %}{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% else %}{% endif %}{% endblock %}
{% block description %}
{% if (preview) %}{% if (preview.text_preview != '') %}{{ preview.text_preview }}{% else %}Продажа вещей!{% endif %}{% endif %}
{% endblock %}
{% block ogDescription %}
{% if (preview) %}{% if (preview.text_preview != '') %}{{ preview.text_preview }}{% else %}Продажа вещей!{% endif %}{% endif %}
{% endblock %}
{% block keywords %}
{% if (preview) %}{% if (preview.text_preview != '') %}{{ preview.text_preview }}{% else %}Продажа вещей!{% endif %}{% endif %}
{% endblock %}

{% block body %}
    <div class="menuBok">
        <img src="{% if (shop.path != '') %}{{ shop.path | apply_filter('logo_shop') }}{% endif %}" />
        {% if is_granted('ROLE_USER') %}
            {% if user %}<a class="subscribe" href="{{ shop.id }}">Подписаться на новости</a>{% endif %}
        {% endif %}
        {#<p>Всего покупателей: <span class="count">{{ shop.users }}</span></p>#}
        {{ include('ShopMainBundle:Main:menuProduct.html.twig') }}
    </div>
    <div class="content">
        <div class="chapter">
            <h3>{{ shop.shopname }}</h3>
            <script>
                /* uptolike share begin */
                (function(d,c){
                    var up=d.createElement('script'),
                            s=d.getElementsByTagName('script')[0],
                            r=Math.floor(Math.random() * 1000000);
                    var cmp = c + Math.floor(Math.random() * 10000);
                    var url = window.location.href;
