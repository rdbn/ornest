{% extends '::main_platform.html.twig' %}

{% block title %}Оформление заказа{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <h4 class="text-muted bottom20">Выберите способ доставки:</h4>
            {% for delivery in form.order %}
            <div class="form-group">
                {{ form_errors(delivery) }}
                {{ form_widget(delivery) }}
            </div>
            {% endfor %}
            <h4 class="text-muted bottom20">Адрес доставки:</h4>
            <div class="form-group">
                {{ form_errors(form.realname) }}
                {{ form_widget(form.realname) }}
            </div>
            <div class="form-group">
            {% if form.email is defined %}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            {% else %}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            {% endif %}
            </div>
            <div class="form-group">
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            {% if form.street is defined %}
            <div class="form-group">
                {{ form_errors(form.street) }}
                {{ form_widget(form.street) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.home_index) }}
                {{ form_widget(form.home_index) }}
            </div>
            {% endif %}
            <div class="form-group">
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.skype) }}
                {{ form_widget(form.skype) }}
            </div>
            <div class="alert alert-success top20">
                {{ form_widget(form.save) }}
                <p>Общие количество: {{ count }}</p>
                <p>Итого: {{ sum }} руб.</p>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
{% endblock %}