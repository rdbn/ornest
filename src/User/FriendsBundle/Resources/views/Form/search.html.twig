{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Поиск друзей{% endblock %}

{% block content %}
    {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    <div class="row top20">
        {{ form_errors(form) }}
        <div class="col-md-9">
            <div class="input-group">
                {{ form_errors(form.realname) }}
                {{ form_widget(form.realname) }}
                <span class="input-group-btn">
                        <button id="search" class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
            </div>
            <div id="result-search" class="top20"></div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            {{form_rest(form)}}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap/js/add-friends.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap/js/search-friends.js') }}" type="text/javascript"></script>
{% endblock %}