{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Предложения дружбы{% endblock %}

{% block content %}
    <div class="col-md-12">
        {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    </div>
    <div id="friends">
    {% for user in result %}
        <div class="col-md-12 top20">
            <div class="media result-user">
                <div class="media-left">
                    <a href="{{ path('user_friends', { 'id' : user.id }) }}">
                        <img class="media-object img-thumbnail" src="{% if(user.path) %}{{ user.path | imagine_filter('avatar') }}{% endif %}" />
                    </a>
                </div>
                <div class="media-body width-body">
                    <h4 class="media-heading">{{ user.realname }}</h4>
                    <div class="btn-group-vertical">
                        <button class="btn btn-success send-message" data-user="{{ user.id }}" data-toggle="modal" data-target="#send-message">
                            <span class="glyphicon glyphicon-edit"></span> Отправить сообщение
                        </button>
                        <a class="btn btn-success" href="{{ path('friends_users', { 'id' : user.id }) }}">
                            Посмотреть друзей
                        </a>
                        <div class="btn-group">
                            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Добавить <span class="caret"></span>
                            </button>
                            <ul class="type dropdown-menu">
                                <li><a data-type="{{ type.0.id }}" data-user="{{ user.id }}" href="#">{{ type.0.name }}</a></li>
                                <li><a data-type="{{ type.1.id }}" data-user="{{ user.id }}" href="#">{{ type.1.name }}</a></li>
                                <li><a data-type="{{ type.2.id }}" data-user="{{ user.id }}" href="#">{{ type.2.name }}</a></li>
                                <li><a data-type="{{ type.3.id }}" data-user="{{ user.id }}" href="#">{{ type.3.name }}</a></li>
                                <li><a data-type="{{ type.4.id }}" data-user="{{ user.id }}" href="#">{{ type.4.name }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bootstrap/js/check-friends.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap/js/add-message.js') }}" type="text/javascript"></script>
{% endblock %}