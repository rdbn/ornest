<div class="btn-group">
    <a class="btn btn-success" href="{{ path('friends') }}">Мои друзья</a>
    <a class="btn btn-success" href="{{ path('search_users') }}">Найти друзей</a>
    <a class="btn btn-success" href="{{ path('my_application_friends') }}">Мои заявки</a>
    <a class="btn btn-success" href="{{ path('application_friends') }}">Заявки</a>
</div>

<!-- Modal -->
<div class="modal fade" id="send-message" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Написат сообщение</h4>
            </div>
            <div class="modal-body">
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_errors(form.text) }}
                    {{ form_widget(form.text) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.save) }}
                </div>
                {{form_rest(form)}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>