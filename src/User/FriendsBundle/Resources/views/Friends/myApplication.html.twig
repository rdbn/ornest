{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Мои заявки{% endblock %}

{% block content %}
    <div class="col-md-12 bottom20">
        {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    </div>
    <div id="friends">
    {% for user in result %}
        <div class="col-md-6 bottom20">
            <div class="media result-user">
                <div class="media-left">
                    <a href="{{ path('user_friends', { 'id' : user.id }) }}">
                        <img class="media-object img-thumbnail {% if user.path == '' %}img-avatar-friends{% endif %}" src="{% if(user.path) %}{{ user.path | imagine_filter('avatar') }}{% endif %}" />
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{ user.realname }}</h4>
                    <div class="btn-group-vertical top20">
                        <button class="btn btn-success send-message" data-user="{{ user.id }}" data-toggle="modal" data-target="#send-message">
                            <span class="glyphicon glyphicon-edit"></span> Отправить сообщение
                        </button>
                        <a class="btn btn-success " href="{{ path('friends_users', { 'id' : user.id }) }}">
                            Посмотреть друзей
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/user/deleteFriends.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap/js/add-message.js') }}" type="text/javascript"></script>
{% endblock %}