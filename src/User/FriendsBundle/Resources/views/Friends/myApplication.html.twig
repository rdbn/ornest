{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Мои предложения{% endblock %}

{% block content %}
    {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    {% for user in resualt %}
        <div class="friends">
            <a href='{{ path('_userID', { 'id' : user.id }) }}'>
                <img src="{% if (user.path != '') %}{{ asset(user.path) }}{% endif %}" />
            </a>
            <h3>{{ user.realname }}</h3>
            <ul>
                <li><a class="sendMessage" href="{{ path('_sendMessage', { 'id' : user.id }) }}">Отправить сообщение</a></li>
                <li><a href="{{ path('_userFriends', { 'id' : user.id }) }}">Посмотреть друзей</a></li>
                <li>
                    <a class="delete" href="{{ user.id }}">
                        Удалить заявку<span class="load"><img src="/public/images/load/ajax-loader-button-three.gif" /></span>
                    </a>
                </li>
            </ul>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/user/deleteFriends.js') }}" type="text/javascript"></script>
{% endblock %}