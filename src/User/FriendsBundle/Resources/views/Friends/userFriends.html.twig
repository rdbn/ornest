{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Друзья друга{% endblock %}

{% block content %}
    <div class="col-md-12">
        {{ include('UserFriendsBundle:Friends:menu.html.twig') }}
    </div>
    <div id="friends">
    {% for user in result %}
        <div class="col-md-6 top20">
            <div class="media result-user">
                <div class="media-left">
                    <a href="{{ path('user_friends', { 'id' : user.friends.id }) }}">
                        <img class="media-object img-thumbnail" src="{% if(user.friends.path) %}{{ user.friends.path | imagine_filter('avatar') }}{% endif %}" />
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{ user.friends.realname }}</h4>
                    <div class="btn-group-vertical">
                        <button class="btn btn-success send-message" data-user="{{ user.friends.id }}" data-toggle="modal" data-target="#send-message">
                            <span class="glyphicon glyphicon-edit"></span> Отправить сообщение
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bootstrap/js/add-message.js') }}" type="text/javascript"></script>
{% endblock %}