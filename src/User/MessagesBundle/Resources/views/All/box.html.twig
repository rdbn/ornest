{% extends '::userEditor.html.twig' %}

{% block title %}Сообщения{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/ECMAScript.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/user/Dialog.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{ include('UserMessagesBundle:Menu:menu.html.twig') }}
    <div class="unread"><a href="{{ id }}">Непрочитанные сообщения</a></div>
    <div id="load" class="loadMessage"><div class="processImage"><img src="/public/images/load/ajax-loader.gif"></div></div>
    <div class="allMessage">
        {% for user in messages %}
            <a class="user" href="{{ path('_userDialog', { 'id' : user.dialog, 'users' : user.id }) }}">
                <img src="{% if (user.path != '') %}{{ user.path | imagine_filter('mini_avatar') }}{% endif %}" />
                <span class="name">{{ user.realname }}</span> <span class="text">{{ user.text }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}
