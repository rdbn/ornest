{% extends 'ManagerMainBundle:Base:layout.html.twig' %}

{% block title %}Сообщения{% endblock %}

{% block content %}
    {{ include('UserMessagesBundle:Menu:menu.html.twig') }}
    <div class="unread"><a href="{{ id }}">Непрочитанные сообщения</a></div>
    <div id="load" class="loadMessage"><div class="processImage"><img src="/public/images/load/ajax-loader.gif"></div></div>
    <div class="allMessage">
        {% for user in take %}
            <a class="user {% if (user.flags == false) %}unread{% endif %}" href="{{ path('_userDialog', { 'id' : user.dialog, 'users' : user.id }) }}">
                <img src="{% if (user.path != '') %}{{ user.path | apply_filter('mini_avatar') }}{% endif %}" />
                <span class="name">{{ user.realname }}</span>
                <span id="{{ user.id }}" class="delete">&times;</span>
                <span class="text">{{ user.text }}</span>
            </a>
        {% endfor %}
        {% for user in send %}
            <a class="user {% if (user.flags == false) %}unread{% endif %}" href="{{ path('_userDialog', { 'id' : user.dialog, 'users' : user.id }) }}">
                <img src="{% if (user.path != '') %}{{ user.path | apply_filter('mini_avatar') }}{% endif %}" />
                <span class="name">{{ user.realname }}</span>
                <span id="{{ user.dialog }}" class="delete">&times;</span>
                <span class="text">{{ user.text }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/user/Dialog.js') }}" type="text/javascript"></script>
{% endblock %}
