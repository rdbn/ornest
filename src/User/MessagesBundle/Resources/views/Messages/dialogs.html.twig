{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Сообщения{% endblock %}

{% block content %}
    {% for dialog in dialogs %}
        <div class="col-md-6 bottom10 dialog" data-toggle="{{ dialog.id }}">
            <div class="media">
                <div class="media-left">
                    <a href="{{ path('dialog', { 'id' : dialog.id }) }}">
                        <img class="media-object img-thumbnail {% if (dialog.usersTo.path == '') %}img-avatar-message{% endif %}" {% if (dialog.usersTo.path != '') %}src="{{ dialog.usersTo.path | imagine_filter('message_avatar') }}"{% endif %} />
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading text-success">{{ dialog.messages[0].users.realname }}</h4>
                    <p class="media-heading text-muted {% if (dialog.flags == false) %}unread{% endif %}">
                        {{ dialog.messages[0].text }}
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}