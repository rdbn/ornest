{% extends '::userEditor.html.twig' %}

{% block title %}Изменить пароль{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/ECMAScript.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/user/ChangePassword.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{ include('UserPropertyBundle:User:menuProperty.html.twig') }}
    <ul class="formFields userInformation">
        <li id="error"></li>
        <form id="Password" action="{{ path('_changePassword') }}" method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
                <li>
                    {{ form_label(form.old_password) }}
                    {{ form_errors(form.old_password) }}
                    {{ form_widget(form.old_password) }}
                    <span class='checkOldPassword'></span>
                </li>
                <li>
                    {{ form_label(form.password.first) }}
                    {{ form_errors(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                </li>
                <li>
                    {{ form_label(form.password.second) }}
                    {{ form_errors(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                     <span class='checkPassword'></span>
                </li>
                <li class="captcha">
                    <div class="content">
                        {{ form_label(form.captcha) }}
                        {{ form_errors(form.captcha) }}
                        {{ form_widget(form.captcha) }}
                    </div>
                </li>
                <li class="submit">
                    {{ form_widget(form.save) }}
                    <p id="load" class="userLoad">
                        <img src="/public/images/load/ajax-loader-button.gif" />
                    </p>
                </li>
            {{ form_rest(form) }}
        </form>
    </ul>
{% endblock %}