{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Изменить пароль{% endblock %}

{% block content %}
    <div class="col-md-12">
        {{ include('UserUserBundle:User:menuProperty.html.twig') }}
    </div>
    <div class="col-md-12 top20">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.old_password) }}
                {{ form_errors(form.old_password) }}
                {{ form_widget(form.old_password) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password.first) }}
                {{ form_errors(form.password.first) }}
                {{ form_widget(form.password.first) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password.second) }}
                {{ form_errors(form.password.second) }}
                {{ form_widget(form.password.second) }}
            </div>
            <div>
                {{ form_widget(form.save) }}
            </div>
        {{ form_start(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/user/ChangePassword.js') }}" type="text/javascript"></script>
{% endblock %}