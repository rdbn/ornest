{% extends '::main_platform.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6">
            <h3>Регистрация для продавцов:</h3>
            {{ form_start(form) }}
            {{ form_errors(form) }}
                {% if (email) %}
                    <div id="errors">Данный Email уже используется.</div>
                {% endif %}
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username) }}
                    <span id="checkEmail"></span>
                </div>
                <div class="form-group">
                    {{ form_label(form.password.first) }}
                    {{ form_errors(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.second) }}
                    {{ form_errors(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                    <span id="checkPassword"></span>
                </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
        <div class="col-lg-6">
            <h3>Регистрация для покупателей:</h3>
            <div class="btn-group-vertical" role="group">
                <a class="btn btn-primary" href="{{ hwi_oauth_login_url('vkontakte') }}">Регистрация через ВК</a>
                <a class="btn btn-info" href="{{ hwi_oauth_login_url('facebook') }}">Регистрация через FB</a>
                <a class="btn btn-danger" href="{{ hwi_oauth_login_url('google') }}">Регистрация через G+</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/formRegistration.js') }}" type="text/javascript"></script>
{% endblock %}