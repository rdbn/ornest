{% extends '::main_platform.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6">
            <h3 class="text-success">Регистрация</h3>
            {{ form_start(form) }}
                {{ form_errors(form) }}
                {% if (email) %}
                    <div id="errors">Данный Email уже используется.</div>
                {% endif %}
                <div id="emails-valid" class="form-group"></div>
                <div class="form-group">
                    {{ form_widget(form.username) }}
                    <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-remove form-control-feedback hide" aria-hidden="true"></span>
                </div>
                <div id="password-valid" class="form-group"></div>
                <div class="form-group">
                    {{ form_widget(form.password.first) }}
                    <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-remove form-control-feedback hide" aria-hidden="true"></span>
                </div>
                <div class="form-group">
                    {{ form_widget(form.password.second) }}
                    <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-remove form-control-feedback hide" aria-hidden="true"></span>
                </div>
            {{ form_end(form) }}
        </div>
        {#<div class="col-lg-6">
            <h3>Регистрация для покупателей:</h3>
