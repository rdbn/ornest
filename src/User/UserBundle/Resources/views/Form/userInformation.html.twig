{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}Настройки{% endblock %}

{% block content %}
    <div class="col-md-12">
        {{ include('UserUserBundle:User:menuProperty.html.twig') }}
    </div>
    <div class="col-md-12 top20">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_errors(form.realname) }}
                {{ form_widget(form.realname) }}
            </div>
            <div id="emails-valid" class="form-group"></div>
            <div class="form-group">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
                <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-remove form-control-feedback hide" aria-hidden="true"></span>
            </div>
            <div class="form-group">
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.skype) }}
                {{ form_widget(form.skype) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            <div class="submit">
                {{ form_widget(form.save) }}
            </div>
            {{form_rest(form)}}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap/js/update-user.js') }}" type="text/javascript"></script>
{% endblock %}

    