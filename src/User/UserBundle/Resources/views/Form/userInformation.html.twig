{% extends 'UserUserBundle::layout.html.twig' %}

{% block title %}О себе{% endblock %}

{% block content %}
    {{ include('UserUserBundle:User:menuProperty.html.twig') }}
    <div class="row top20">
        <div class="col-md-12">
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_errors(form.realname) }}
                {{ form_widget(form.realname) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.skype) }}
                {{ form_widget(form.skype) }}
            </div>
            <div class="submit">
                {{ form_widget(form.save) }}
            </div>
            {{form_rest(form)}}
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/location.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/user/UserInformation.js') }}" type="text/javascript"></script>
{% endblock %}

    