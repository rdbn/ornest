{% extends '::main_platform.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h4>Вход для продавцов:</h4>
            <div id="errors" class="login_error"></div>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <input id="username" class="form-control" type="text" name="_username" placeholder="Email" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <input id="password" class="form-control" type="password" name="_password" placeholder="Пароль" />
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" checked /> Запомнить меня
                    </label>
                </div>
                <button class="btn btn-success btn-sm" type="submit">Войти</button>
            </form>
        </div>
        <div class="col-lg-6">
            <h4>Вход для покупателей:</h4>
            <div class="btn-group-vertical" role="group">
                <a class="btn btn-primary" href="{{ hwi_oauth_login_url('vkontakte') }}">Регистрация через ВК</a>
                <a class="btn btn-info" href="{{ hwi_oauth_login_url('facebook') }}">Регистрация через FB</a>
                <a class="btn btn-danger" href="{{ hwi_oauth_login_url('google') }}">Регистрация через G+</a>
            </div>
        </div>
    </div>
{% endblock %}