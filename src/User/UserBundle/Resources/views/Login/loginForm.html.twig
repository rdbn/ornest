{% extends '::main_platform.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block body %}
    <div class="loginForm">
    <div class="row">
        <div class="col-lg-6">
            <h4>Вход для продавцов:</h4>
            <div id="errors" class="login_error"></div>
            <form action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <input id="username" class="form-control" type="text" name="_username" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input id="password" class="form-control" type="password" name="_password" placeholder="Пароль" />
                </div>
                <input class="btn btn-success btn-sm" type="submit" value="Войти" />
            </form>
        </div>
        <div class="col-lg-6">
            <h4>Вход для покупателей:</h4>
            <div class="btn-group-vertical" role="group">
                <a class="btn btn-primary" href="{{ hwi_oauth_login_url('vkontakte') }}">Регистрация через ВК</a>
                <a class="btn btn-info" href="{{ hwi_oauth_login_url('facebook') }}">Регистрация через FB</a>
                <a class="btn btn-danger" href="{{ hwi_oauth_login_url('google') }}">Регистрация через G+</a>
            </div>
        </div>
    </div>
{% endblock %}