{% extends 'ManagerMainBundle:Base:layout.html.twig' %}

{% block title %}Настройки{% endblock %}

{% block content %}
    {{ include('UserUserBundle:User:menuProperty.html.twig') }}
    <h3 class="text-success">Личная информация:</h3>
    <div class="row">
        <div class="col-md-12 text-muted">
            <p>Email: <span class="text-success">{{ user.getUsername }}</span></p>
            <p>Имя: <span class="text-success">{{ user.getRealname }}</span></p>
        </div>
    </div>
    <h3 class="text-success">Контактная информация:</h3>
    <div class="row">
        <div class="col-md-12 text-muted">
            <p>Страна: <span class="text-success">{% if user.getCity %}{{ user.getCity.getCountry.getName }}{% endif %}</span></p>
            <p>Город: <span class="text-success">{% if user.getCity %}{{ user.getCity.getName }}{% endif %}</span></p>
            <p>Телефон: <span class="text-success">{% if user.phone %}{{ user.phone }}{% endif %}</span></p>
            <p>Skype: <span class="text-success">{% if user.skype %}{{ user.skype }}{% endif %}</span></p>
        </div>
    </div>
{% endblock %}